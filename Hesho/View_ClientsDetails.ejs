<body>

    <div class="header">
          
          <img src="Logo.png" alt:"L" width="300" height="100" >
          <h1>View Client Details</h1>
          <form method="GET" action="/login">
            <button>Logoff</button>
          </form>
    </div>
          <form class="search-form">
            <input type="text" class="search-input" id="searchInput" placeholder="Search by account name...">
            <button type="button" class="search-button" onclick="searchAccount()">Search</button>
          </form>
        
          <table id="accountTable">
            <tr>
              <th>Client</th>
              <th>Account Number</th>
              <th>Loan Details</th>
              <th>Accept or Reject</th>

            </tr>
            <!-- Account data will be dynamically added here -->
          </table>
          <div class="logoff-button">
           
          </div>
          <script>
            function searchAccount() {
              const input = document.getElementById("searchInput");
              const keyword = input.value.toLowerCase();
        
              const accountTable = document.getElementById("accountTable");
              const rows = accountTable.getElementsByTagName("tr");
        
              for (let i = 1; i < rows.length; i++) {
                const accountName = rows[i].getElementsByTagName("td")[0].textContent.toLowerCase();
                if (accountName.includes(keyword)) {
                  rows[i].style.display = "";
                } else {
                  rows[i].style.display = "none";
                }
              }
            }
          </script>
      </div>
              
     
     

      
       
           
     


    
    







    
