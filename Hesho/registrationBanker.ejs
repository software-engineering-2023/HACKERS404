        }
        
        .header {
          background-color: #6eb1bd;
          position: relative;
        }
        .header button{
          position: absolute;
          top: 25%;
          width: 8%;
          text-align: center;
          font-size: 25px;
          font-weight: bold;
          margin-left: 90%;
          color: #ffffff;
          background-color: #000000;
        }
         
       
        
        h1 {
          position: absolute;
          top: 15%;
          width: 100%;
          text-align: center;
          font-size: 30px;
          font-weight: bold;
          margin-left: 40%;
          color: #000000;
        }
        p {
          font-size: 18px;
          margin-bottom: 10px;
          color: #000000;
          margin-left: 2%;
        }
       
        label {
          display: block;
          font-size: 25px;
          margin-bottom: 5px;
          color: #000000;
          margin-left: 2%;
        }
        input[type="text"],
        input[type="password"] {
          padding: 10px;
          font-size: 16px;
          border: 1px solid #ccc;
          border-radius: 4px;
          width: 30%;
          margin-bottom: 10px;
          margin-left: 2%;
        }
        button {
          padding: 10px 20px;
          background-color: #0066cc;
          color: #fff;
          border: none;
          border-radius: 4px;
          font-size: 16px;
          cursor: pointer;
        }
        button:hover {
          background-color: #004f99;
        }
        a {
          color: #000000;
          text-decoration: none;
        }
        a:hover {
          
          color: #186cc7;
        }
        .container {
          max-width: 600px;
          margin: 0 0;
          padding: 40px;
        }
        
        
        
        .dashboard-buttons {
          display: grid;
          grid-template-columns: repeat(3, 1fr);
          grid-gap: 20px;
        }
        
        .dashboard-button {
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: center;
          padding: 20px;
          background-color: #6eb1bd;
          border-radius: 8px;
          text-align: center;
          transition: background-color 0.3s ease;
        }
        
        .dashboard-button:hover {
          background-color: #E5E5E5;
        }
        
        .dashboard-button-icon {
          font-size: 32px;
          margin-bottom: 10px;
        }
        
        .dashboard-button-label {
          font-size: 14px;
        }
    
        
       
        </style>
</head>


